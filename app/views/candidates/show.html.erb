<div  id="content-padded" >
  <div class="container">
    <div class="row">
      <div class="col-xs-4 col-xs-offset-4">
        <h2 id="title-candidate-padded"><%= @candidate.first_name + " " + @candidate.last_name %> </h2>
        <p><strong> Phone number </strong> : <%= @candidate.phone_number %></p>
        <p><strong> Email </strong> : <%= @candidate.email %></p>
        <button type="button" id="button-candidate" class="btn btn-warning" data-toggle="modal" data-target="#EditInfoModal">Edit Info</button>
      </div>
    </div>
  </div>
</div>

<% if @candidate.job_applications.any? %>

<div class="container">
  <div class="row">
    <div class="col-xs-8 col-xs-offset-2">
      <div class="line">
      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="text-center">
      <div class="col-xs-4 col-xs-offset-4">

      <h3>You candidate for</h3>
          <% @candidate.job_applications.each do |job_application| %>

              <button type="button" id="button-candidate" class="btn" data-toggle="modal" data-target="#ShowInfoModal"><%= job_application.job_offer.title %></button>

          <% end %>
      </div>
    </div>
  </div>
</div>
<% end %>

<!-- modal Edit info user -->

<div class="modal fade" id="EditInfoModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title text-center" id="myModalLabel">Update your info</h4>
      </div>
      <div class="modal-body">
        <%= simple_form_for([ current_candidate ]) do |form| %>
            <%= form.input :first_name %>
            <%= form.input :last_name %>
            <%= form.input :phone_number %>
            <%= form.button :submit %>
          <% end %>
      </div>
    </div>
  </div>
</div>

<!-- Modal Show info of application -->

<div class="modal fade" id="ShowInfoModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <% @candidate.job_applications.each do |job_application| %>
        <h4 class="modal-title text-center" id="myModalLabel"><%= job_application.job_offer.title %></h4>
      </div>
      <div class="modal-body">
            <%= job_application.job_offer.description %>
            <p> <%= " " %> </p>
            <p>You candidate the : <%= job_application.created_at.strftime("%b %d, %Y") %></p>
        <% end %>
      </div>
    </div>
  </div>
</div>
