<div class="banner" style="background-image: linear-gradient(-225deg, rgba(52,73,94,0.5) 0%, rgba(255,255,255,0.3) 50%), url(<%= image_path 'papers.jpg' %>);">
  <div class="container">
    <div class="row">
      <div class="col-xs-8 col-xs-offset-2">
        <form action="/search" class="navbar-higher-search" id="search">
          <input type="text" class="navbar-higher-search-input" value="What is the position you are looking for ?">
          <button type="submit" class="navbar-higher-search-btn">
            <i class="fa fa-search"></i>
          </button>
        </form>
      </div>
    </div>

    <div class="btn-inscription">
      <div class="row">
        <% unless candidate_signed_in? || recruiter_signed_in? %>
          <div class="col-xs-12 col-md-6">
            <%= link_to "connect as recruiter", job_offers_path, class: "btn-recruiter" %>
          </div>
          <div class="col-xs-12 col-md-6">
            <%= link_to "connect as candidate", new_candidate_session_path, class: "btn-candidate" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

