<div class="gray-background">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-xs-offset-0">
        <div class="cv-wrapper"> <!-- div englobbante  -->

          <% if params[:query] %>
            <h2 class="search-header"><%= pluralize(@job_offers.count, "job offer")%> for <strong><%= params[:query] %></strong></h2>
          <% else %>
            <h2 class="search-header"><%= pluralize(@job_offers.count, "job offer") %></h2>
          <% end %>

          <!--job list -->
          <% @job_offers.each do |job_offer| %>
              <div class="product">
                <!-- replace img with job_offer.organization.photo_url -->
                <% if job_offer.recruiter.organization.name == "Oracle" %>
                  <%= image_tag "oracle-logo-organization.png", class: "product-image" %>
                <% elsif job_offer.recruiter.organization.name == "L'Oréal" %>
                  <%= image_tag "loreal-logo-organization.png", class: "product-image" %>
                <% elsif job_offer.recruiter.organization.name == "Amazon" %>
                  <%= image_tag "amazon-logo-organization.png", class: "product-image" %>
                <% end %>
                <div class='product-body'>
                  <h3><%= job_offer.recruiter.organization.name %></h3>
                  <p><%= link_to job_offer.title, job_offer_path(job_offer) %></p>
                </div>
                <ul class="list-inline product-controls hidden-sm hidden-xs">
                  <li><i class="fa fa-globe"></i> <%= job_offer.location %></li>
                  <li><i class="fa fa-wpforms"></i> <%= job_offer.min_xp.to_i.to_s + "y+" %></li>
                  <li><i class="fa fa-money"></i> <%= job_offer.salary.to_s + "K€" %></li>
                </ul>
              </div>
          <% end %>

        </div> <!-- fin div englobbante  -->
      </div>
    </div>
  </div>
</div> <!-- fin couleur de fond black -->
