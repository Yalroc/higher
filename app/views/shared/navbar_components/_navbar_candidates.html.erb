<!-- NAVBAR FOR CANDIDATES (managing their past applications) -->
<div class="navbar-higher"></div> <!-- spacer to compensate the 'fixed navbar offset' -->
<div class="navbar-higher navbar-higher-fixed blue-bottom-border">

  <!-- Logo -->
  <%= link_to '#', class: "navbar-higher-brand" do %>
    <%= image_tag "name-logo-small.png" %>
  <%end %>

  <!-- navigation links -->
  <div class="navbar-higher-links text-center">
    <%= link_to "profile", root_path, class: "navbar-higher-link" %>
    <%= link_to "applications", root_path, class: "navbar-higher-link" %>
    <%= link_to "jobs", root_path, class: "navbar-higher-link" %>
  </div>

  <!-- notification icons -->
  <div class="navbar-higher-notifications">
    <%= link_to "#", id: "navbar-higher-notification", class: "navbar-higher-link" do %>
      <div class="badge-container inline">
        <i class="fa fa-comments"></i>
        <div class="badge badge-blue">3</div>
      </div>
    <% end %>
    <%= link_to "#", id: "navbar-higher-notification", class: "navbar-higher-link" do %>
      <div class="badge-container inline">
        <i class="glyphicon glyphicon-flag"></i>
      </div>
    <% end %>
    <%= link_to "#", id: "navbar-higher-notification", class: "navbar-higher-link" do %>
      <div class="badge-container inline">
        <i class="glyphicon glyphicon-user"></i>
      </div>
    <% end %>
  </div>


 <!-- dropdown / relative<=>absolute to navbar-higher-funnel -->
  <div class="dropdown" id="funnel-logout-triangle">
     <p class="navbar-higher-link navbar-higher-menu" data-toggle="dropdown" aria-hidden="true">
      <% if current_candidate.first_name %>
        <%= current_candidate.first_name %>
      <% elsif current_candidate.email %>
        <%= current_candidate.email %>
      <% end %>
      <i class="fa fa-caret-down"></i>
    </p>

    <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
      <li>
        <%= link_to candidate_path(current_candidate) do %>
          <i class="fa fa-user"></i> <%= t(".profile", default: "Account") %>
        <% end %>
      </li>
      <li>
        <%= link_to destroy_candidate_session_path, method: :delete do %>
          <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
        <% end %>
      </li>
    </ul>
  </div> <!-- end of dropdown -->

</div> <!-- end of navbar for candidates -->
